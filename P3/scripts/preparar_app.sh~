apt-get install -y zip
apt-get install -y git

# Descargar aplicaci칩n
git clone https://github.com/TransparenciaUGR/Proyecto-IV

# Actualizamos repositorios
cd Proyecto-IV
git pull
cd P3

# A침adir permisos de ejecuci칩n
chmod +x run.sh

# Lanzar aplicaci칩n
